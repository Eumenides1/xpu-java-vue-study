<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rookie.stack.xpu.mapper.PermissionMapper">
    <select id="getPermissionsByUserId" resultType="String">
        SELECT
            p.permission_value
        FROM
            permission p
                JOIN
            user_role ur ON p.role_id = ur.role_id
        WHERE
            ur.user_id = #{userId};
    </select>

</mapper>